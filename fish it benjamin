-- Floating Auto Fishing Button dengan Lock/Unlock
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer

-- ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FloatingFishingGUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = player:WaitForChild("PlayerGui")

-- Floating Button Frame
local floatFrame = Instance.new("Frame")
floatFrame.Size = UDim2.new(0,80,0,80)
floatFrame.Position = UDim2.new(0.5,-40,0.5,-40)
floatFrame.BackgroundTransparency = 1
floatFrame.Parent = ScreenGui

-- Main Button
local floatBtn = Instance.new("TextButton")
floatBtn.Size = UDim2.new(1,0,1,0)
floatBtn.BackgroundColor3 = Color3.fromRGB(70,130,180)
floatBtn.Text = ""
floatBtn.Parent = floatFrame
floatBtn.AutoButtonColor = true

local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0,20)
uicorner.Parent = floatBtn

-- Icon Ikan
local fishIcon = Instance.new("ImageLabel")
fishIcon.Size = UDim2.new(0.6,0,0.6,0)
fishIcon.Position = UDim2.new(0.2,0,0.2,0)
fishIcon.BackgroundTransparency = 1
fishIcon.Image = "rbxasset://textures/ui/GuiImagePlaceholder.png"
fishIcon.ScaleType = Enum.ScaleType.Fit
fishIcon.Parent = floatBtn

-- Lock/Unlock Button
local lockBtn = Instance.new("TextButton")
lockBtn.Size = UDim2.new(0,24,0,24)
lockBtn.Position = UDim2.new(1,-28,0,4)
lockBtn.BackgroundColor3 = Color3.fromRGB(200,200,200)
lockBtn.Text = "ðŸ”“"
lockBtn.TextScaled = true
lockBtn.TextColor3 = Color3.fromRGB(0,0,0)
lockBtn.Parent = floatFrame

local lockUICorner = Instance.new("UICorner")
lockUICorner.CornerRadius = UDim.new(0,6)
lockUICorner.Parent = lockBtn

-- Dragging logic
local dragging = false
local dragInput, dragStart, startPos
local unlocked = true -- awalnya bisa digeser

floatFrame.InputBegan:Connect(function(input)
    if unlocked and input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = floatFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

floatFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

RunService.RenderStepped:Connect(function()
    if dragging and dragInput then
        local delta = dragInput.Position - dragStart
        floatFrame.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)

-- Lock/Unlock toggle
lockBtn.MouseButton1Click:Connect(function()
    unlocked = not unlocked
    lockBtn.Text = unlocked and "ðŸ”“" or "ðŸ”’"
end)

-- Fishing toggle
local fishing = false
floatBtn.MouseButton1Click:Connect(function()
    fishing = not fishing
    floatBtn.BackgroundColor3 = fishing and Color3.fromRGB(50,200,50) or Color3.fromRGB(70,130,180)
end)

-- Auto Fishing Logic
RunService.RenderStepped:Connect(function()
    if fishing then
        local success, err = pcall(function()
            local tool = player.Backpack:FindFirstChildWhichIsA("Tool") or player.Character:FindFirstChildWhichIsA("Tool")
            if tool and tool.Name:lower():find("fish") then
                tool:Activate() -- cast
                wait(1)
                tool:Activate() -- catch
            end
        end)
        if not success then
            warn(err)
        end
    end
end)
