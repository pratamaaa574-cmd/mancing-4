--// SERVICES
local TweenService = game:GetService("TweenService")
local Camera = workspace.CurrentCamera

--// GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "CharlesHubV2"
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = game.CoreGui

------------------------------------------------
--// LOADING PANEL (SAMPING)
------------------------------------------------
local Loading = Instance.new("Frame", ScreenGui)
Loading.Size = UDim2.new(0,180,0,60)
Loading.Position = UDim2.new(0,-200,0.5,-30)
Loading.BackgroundColor3 = Color3.fromRGB(30,60,120)
Instance.new("UICorner", Loading).CornerRadius = UDim.new(0,12)

local LoadText = Instance.new("TextLabel", Loading)
LoadText.Size = UDim2.new(1,0,1,0)
LoadText.Text = "ü™© CharlesHub\nLoading..."
LoadText.Font = Enum.Font.GothamBold
LoadText.TextSize = 14
LoadText.TextColor3 = Color3.new(1,1,1)
LoadText.BackgroundTransparency = 1

-- SLIDE IN
TweenService:Create(
	Loading,
	TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
	{Position = UDim2.new(0,12,0.5,-30)}
):Play()

task.wait(1.2)

------------------------------------------------
--// MAIN GUI
------------------------------------------------
local WIDTH = math.clamp(Camera.ViewportSize.X - 160, 260, 340)
local HEIGHT = math.clamp(Camera.ViewportSize.Y - 200, 220, 280)

local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, WIDTH, 0, HEIGHT)
Main.Position = UDim2.new(0,-WIDTH,0.5,-HEIGHT/2)
Main.BackgroundColor3 = Color3.fromRGB(16,30,58)
Main.Active = true
Main.ZIndex = 5
Instance.new("UICorner", Main).CornerRadius = UDim.new(0,12)

-- SLIDE MAIN IN
TweenService:Create(
	Main,
	TweenInfo.new(0.45, Enum.EasingStyle.Quint, Enum.EasingDirection.Out),
	{Position = UDim2.new(0,12,0.5,-HEIGHT/2)}
):Play()

-- LOADING OUT
TweenService:Create(
	Loading,
	TweenInfo.new(0.3),
	{Position = UDim2.new(0,-220,0.5,-30)}
):Play()

task.delay(0.3,function()
	Loading:Destroy()
end)

------------------------------------------------
--// TOP BAR
------------------------------------------------
local Top = Instance.new("Frame", Main)
Top.Size = UDim2.new(1,0,0,30)
Top.BackgroundColor3 = Color3.fromRGB(22,42,80)
Top.Active = true
Top.Draggable = true
Instance.new("UICorner", Top).CornerRadius = UDim.new(0,12)

local Title = Instance.new("TextLabel", Top)
Title.Size = UDim2.new(1,-70,1,0)
Title.Position = UDim2.new(0,10,0,0)
Title.Text = "üêü Fishing Menu"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 13
Title.TextColor3 = Color3.fromRGB(220,230,255)
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Top)
MinBtn.Size = UDim2.new(0,24,0,20)
MinBtn.Position = UDim2.new(1,-52,0.5,-10)
MinBtn.Text = "-"
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 16
MinBtn.BackgroundColor3 = Color3.fromRGB(60,120,200)
MinBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", MinBtn)

local CloseBtn = Instance.new("TextButton", Top)
CloseBtn.Size = UDim2.new(0,24,0,20)
CloseBtn.Position = UDim2.new(1,-26,0.5,-10)
CloseBtn.Text = "X"
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.TextSize = 13
CloseBtn.BackgroundColor3 = Color3.fromRGB(60,120,200)
CloseBtn.TextColor3 = Color3.fromRGB(255,120,120)
Instance.new("UICorner", CloseBtn)

------------------------------------------------
--// CONTENT (DASHBOARD STYLE)
------------------------------------------------
local Content = Instance.new("Frame", Main)
Content.Position = UDim2.new(0,0,0,30)
Content.Size = UDim2.new(1,0,1,-30)
Content.BackgroundColor3 = Color3.fromRGB(18,34,66)

local Info = Instance.new("TextLabel", Content)
Info.Size = UDim2.new(1,-20,1,-20)
Info.Position = UDim2.new(0,10,0,10)
Info.Text = "üé£ Auto Fishing\n‚ö° Instant Catch\n‚è± Delay Control\n\nStatus: Ready"
Info.Font = Enum.Font.Gotham
Info.TextSize = 13
Info.TextWrapped = true
Info.TextColor3 = Color3.fromRGB(210,230,255)
Info.BackgroundTransparency = 1

------------------------------------------------
--// MINI BUTTON
------------------------------------------------
local Mini = Instance.new("TextButton", ScreenGui)
Mini.Size = UDim2.new(0,120,0,36)
Mini.Position = UDim2.new(0,12,0.5,0)
Mini.Text = "ü™© Charles X"
Mini.Font = Enum.Font.GothamBold
Mini.TextSize = 13
Mini.BackgroundColor3 = Color3.fromRGB(60,120,200)
Mini.TextColor3 = Color3.new(1,1,1)
Mini.Visible = false
Mini.Active = true
Mini.Draggable = true
Instance.new("UICorner", Mini).CornerRadius = UDim.new(0,10)

------------------------------------------------
--// LOGIC + ANIMATION
------------------------------------------------
MinBtn.MouseButton1Click:Connect(function()
	TweenService:Create(
		Main,
		TweenInfo.new(0.35, Enum.EasingStyle.Quad),
		{Position = UDim2.new(0,-WIDTH,0.5,-HEIGHT/2)}
	):Play()
	task.wait(0.3)
	Main.Visible = false
	Mini.Visible = true
end)

Mini.MouseButton1Click:Connect(function()
	Mini.Visible = false
	Main.Visible = true
	TweenService:Create(
		Main,
		TweenInfo.new(0.35, Enum.EasingStyle.Quad),
		{Position = UDim2.new(0,12,0.5,-HEIGHT/2)}
	):Play()
end)

CloseBtn.MouseButton1Click:Connect(function()
	TweenService:Create(
		Main,
		TweenInfo.new(0.3),
		{BackgroundTransparency = 1, Position = Main.Position + UDim2.new(0,0,0,20)}
	):Play()
	task.wait(0.3)
	ScreenGui:Destroy()
end)

print("Charles Hub LOADED WITH ANIMATION")
