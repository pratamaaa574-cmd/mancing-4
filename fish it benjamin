--// SERVICES
local TweenService = game:GetService("TweenService")
local Camera = workspace.CurrentCamera

--// GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "CharlesHubX"
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = game.CoreGui

--// SIZE
local screenSize = Camera.ViewportSize
local WIDTH = math.clamp(screenSize.X - 140, 260, 340)
local HEIGHT = math.clamp(screenSize.Y - 180, 220, 280)

------------------------------------------------
--// MAIN
------------------------------------------------
local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, WIDTH, 0, HEIGHT)
Main.Position = UDim2.new(0, -WIDTH, 0.5, -HEIGHT/2)
Main.BackgroundColor3 = Color3.fromRGB(16,30,58)
Main.Active = true
Main.Visible = false
Main.ZIndex = 5
Instance.new("UICorner", Main).CornerRadius = UDim.new(0,12)

local MainOriginSize = Main.Size
local MainOriginPos = UDim2.new(0, 12, 0.5, -HEIGHT/2)

------------------------------------------------
--// TOP BAR
------------------------------------------------
local Top = Instance.new("Frame", Main)
Top.Size = UDim2.new(1,0,0,30)
Top.BackgroundColor3 = Color3.fromRGB(22,42,80)
Top.Active = true
Top.Draggable = true
Top.ZIndex = 6

local Title = Instance.new("TextLabel", Top)
Title.Size = UDim2.new(1,-80,1,0)
Title.Position = UDim2.new(0,10,0,0)
Title.Text = "‚òÑÔ∏è Charles X"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 13
Title.TextColor3 = Color3.fromRGB(220,230,255)
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

-- MINIMIZE
local MinBtn = Instance.new("TextButton", Top)
MinBtn.Size = UDim2.new(0,24,0,20)
MinBtn.Position = UDim2.new(1,-52,0.5,-10)
MinBtn.Text = "-"
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 16
MinBtn.BackgroundColor3 = Color3.fromRGB(60,120,200)
MinBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", MinBtn)

-- CLOSE
local CloseBtn = Instance.new("TextButton", Top)
CloseBtn.Size = UDim2.new(0,24,0,20)
CloseBtn.Position = UDim2.new(1,-26,0.5,-10)
CloseBtn.Text = "X"
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.TextSize = 13
CloseBtn.BackgroundColor3 = Color3.fromRGB(60,120,200)
CloseBtn.TextColor3 = Color3.fromRGB(255,130,130)
Instance.new("UICorner", CloseBtn)

------------------------------------------------
--// SIDEBAR
------------------------------------------------
local Sidebar = Instance.new("Frame", Main)
Sidebar.Position = UDim2.new(0,0,0,30)
Sidebar.Size = UDim2.new(0,52,1,-30)
Sidebar.BackgroundColor3 = Color3.fromRGB(20,45,90)
Instance.new("UICorner", Sidebar).CornerRadius = UDim.new(0,12)

local Icon = Instance.new("TextLabel", Sidebar)
Icon.Size = UDim2.new(1,0,0,36)
Icon.Position = UDim2.new(0,0,0,10)
Icon.Text = "üé£"
Icon.Font = Enum.Font.GothamBold
Icon.TextSize = 22
Icon.TextColor3 = Color3.fromRGB(210,230,255)
Icon.BackgroundTransparency = 1

------------------------------------------------
--// CONTENT (FISHING MENU)
------------------------------------------------
local Content = Instance.new("Frame", Main)
Content.Position = UDim2.new(0,52,0,30)
Content.Size = UDim2.new(1,-52,1,-30)
Content.BackgroundColor3 = Color3.fromRGB(18,34,66)

local Layout = Instance.new("UIListLayout", Content)
Layout.Padding = UDim.new(0,8)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function CreateButton(text)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0.9,0,0,34)
	btn.Text = "‚ùå "..text
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 13
	btn.TextColor3 = Color3.new(1,1,1)
	btn.BackgroundColor3 = Color3.fromRGB(60,120,200)
	btn.Parent = Content
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0,10)
	return btn
end

local AutoFish = CreateButton("Auto Fishing")
local Instant = CreateButton("Instant Catch")
local NoDelay = CreateButton("No Fishing Delay")

local state = {}

local function Toggle(btn, name)
	state[name] = not state[name]
	btn.Text = (state[name] and "‚úÖ " or "‚ùå ")..name
	btn.BackgroundColor3 = state[name]
		and Color3.fromRGB(80,170,255)
		or Color3.fromRGB(60,120,200)
end

AutoFish.MouseButton1Click:Connect(function()
	Toggle(AutoFish,"Auto Fishing")
end)

Instant.MouseButton1Click:Connect(function()
	Toggle(Instant,"Instant Catch")
end)

NoDelay.MouseButton1Click:Connect(function()
	Toggle(NoDelay,"No Fishing Delay")
end)

------------------------------------------------
--// MINI WINDOW
------------------------------------------------
local MiniBtn = Instance.new("TextButton", ScreenGui)
MiniBtn.Size = UDim2.new(0,130,0,36)
MiniBtn.Position = UDim2.new(0,12,0.5,0)
MiniBtn.Text = "‚òÑÔ∏è Charles X"
MiniBtn.Font = Enum.Font.GothamBold
MiniBtn.TextSize = 13
MiniBtn.BackgroundColor3 = Color3.fromRGB(60,120,200)
MiniBtn.TextColor3 = Color3.new(1,1,1)
MiniBtn.Visible = false
MiniBtn.Active = true
MiniBtn.Draggable = true
Instance.new("UICorner", MiniBtn)

------------------------------------------------
--// LOADING
------------------------------------------------
local Loading = Instance.new("Frame", ScreenGui)
Loading.Size = UDim2.new(0,160,0,34)
Loading.Position = UDim2.new(0,12,1,-46)
Loading.BackgroundColor3 = Color3.fromRGB(22,42,80)
Instance.new("UICorner", Loading)

local LoadText = Instance.new("TextLabel", Loading)
LoadText.Size = UDim2.new(1,0,1,0)
LoadText.Text = "‚òÑÔ∏è Charles X memuat..."
LoadText.Font = Enum.Font.GothamBold
LoadText.TextSize = 12
LoadText.TextColor3 = Color3.fromRGB(220,230,255)
LoadText.BackgroundTransparency = 1

------------------------------------------------
--// LOGIC
------------------------------------------------
task.delay(1.2,function()
	TweenService:Create(Loading,TweenInfo.new(0.4),{BackgroundTransparency=1}):Play()
	task.wait(0.4)
	Loading:Destroy()

	Main.Visible = true
	TweenService:Create(Main,TweenInfo.new(0.5,Enum.EasingStyle.Quart),{
		Position = MainOriginPos
	}):Play()
end)

-- MINIMIZE (ANIMATED)
MinBtn.MouseButton1Click:Connect(function()
	TweenService:Create(Main,TweenInfo.new(0.25),{
		Size = UDim2.new(0,Main.Size.X.Offset,0,30)
	}):Play()
	task.wait(0.25)
	Main.Visible = false
	MiniBtn.Visible = true
end)

-- RESTORE
MiniBtn.MouseButton1Click:Connect(function()
	MiniBtn.Visible = false
	Main.Visible = true
	Main.Size = UDim2.new(0,Main.Size.X.Offset,0,30)
	TweenService:Create(Main,TweenInfo.new(0.3,Enum.EasingStyle.Quart),{
		Size = MainOriginSize
	}):Play()
end)

-- CLOSE (ANIMATED)
CloseBtn.MouseButton1Click:Connect(function()
	TweenService:Create(Main,TweenInfo.new(0.3,Enum.EasingStyle.Back,Enum.EasingDirection.In),{
		Size = UDim2.new(0,0,0,0),
		BackgroundTransparency = 1
	}):Play()
	task.wait(0.25)
	ScreenGui:Destroy()
end)

print("‚òÑÔ∏è Charles X READY & STABLE")
